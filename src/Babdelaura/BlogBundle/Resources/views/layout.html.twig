<!doctype html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="description" content="{{ metaDescription|default('Blog traitant du nail art et de la création de bijoux en pâte polymère') }}" />

        {% block facebookMetas %}
            <meta property="og:site_name" content="Bric à Brac de Laura" />
            <meta property="og:locale" content="fr_FR" />
            <meta property="og:type" content="website" />
            <meta property="og:url" content="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}" />
            <meta property="og:image" content="{{ app.request.getSchemeAndHttpHost() ~ ogImage|default(asset('images/header-bijoux.jpg')) }}" />
            <meta property="og:title" content="{{ ogTitle|default('Bric à Brac de Laura') }}" />
            <meta property="og:description" content="{{ metaDescription|default('Blog traitant du nail art et de la création de bijoux en pâte polymère.') }}" />
        {% endblock %}

        <title>{% block pageTitle %}{% endblock %}Bric à Brac de Laura</title>

        <link rel="stylesheet" media="screen" href="{{asset('css/main.css') }}" />

        {% include 'BabdelauraBlogBundle::favicon.html.twig' %}
    </head>
    <body>
        <div id="fb-root"></div>
        <script>(function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = "//connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v2.0";
          fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>

        <header class="header">
            <a class="header-link" href="{{ path('babdelaurablog_accueil') }}">Revenir à l'accueil</a>
        </header>

        <nav class="main-nav" id="main-nav">
            <div class="wrapper">
                {{render(controller('BabdelauraBlogBundle:Blog:mainMenu'))}}
            </div>
        </nav>

        <div class="content">
            <div class="content-inner wrapper row">
                {% block content %}
                <div class="eight columns">
                    {% block mainContent %}
                    {% endblock %}
                </div>
                <div class="four columns">
                    {% block sidebar %}
                    <section class="sidebar-section">
                        <form method="get" action="{{ path('babdelaurablog_recherche') }}">
                            <input name="motscles" id="search" placeholder="Rechercher" />
                        </form>
                    </section>
                    <section class="sidebar-section">
                        <h1 class="sidebar-title">Où me trouver</h1>
                        <ul class="social-links">
                            <li class="social-link">
                                <a href="https://www.facebook.com/BabDeLaura" target="_blank" title="Facebook">
                                    <span class="social-icon social-fb"></span>
                                    Bric à Brac de Laura
                                </a>
                            </li>
                            <li class="social-link">
                                <a href="https://twitter.com/BabDeLaura" target="_blank" title="Twitter">
                                    <span class="social-icon social-twitter"></span>
                                    @BabDeLaura
                                </a>
                            </li>
                            <li class="social-link">
                                <a href="http://www.pinterest.com/BabDeLaura/" target="_blank" title="Pinterest">
                                    <span class="social-icon social-pinterest"></span>
                                    BabDeLaura
                                </a>
                            </li>
                            <li class="social-link">
                                <a href="http://instagram.com/BabDeLaura" target="_blank" title="Instagram">
                                    <span class="social-icon social-instagram"></span>
                                    BabDeLaura
                                </a>
                            </li>
                            <li class="social-link">
                                <a href="http://www.hellocoton.fr/mapage/bricabrac-de-laura" target="_blank" title="Hellocoton">
                                    <span class="social-icon social-hellocoton"></span>
                                    Bricabrac-de-laura
                                </a>
                            </li>
                            <li class="social-link">
                                <a href="mailto:bab-de-laura@hotmail.fr" title="Mail">
                                    <span class="social-icon social-mail"></span>
                                    Contact
                                </a>
                            </li>

                        </ul>
                    </section>
                    {{render(controller('BabdelauraBlogBundle:Instagram:chargerFlux'))}}
                    {% endblock %}
                </div>
                {% endblock %}
            </div>
        </div>
        <footer class="footer">
            Site développé du bout de mes ongles.
        </footer>


        {% block javascripts %}
            {% if app.environment == 'prod' %}
                <script src="{{ asset('bundles/babdelaurablog/js/google-analytics.js') }}"></script>
            {% endif %}
            <script src="{{ asset('js/app.js') }}"></script>

            <script type="text/javascript" async defer data-pin-hover="true" src="//assets.pinterest.com/js/pinit.js"></script>
        {% endblock %}
    </body>
</html>