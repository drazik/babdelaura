{{ form_start(form, {'attr': {'class': 'CommentForm'}}) }}
    <fieldset class="bab-Grid bab-Grid--smallGutters">
        <div class="bab-Grid-cell bab-Grid-cell--1-3">
            {{ form_label(form.auteur, 'Nom') }}
            {{ form_widget(form.auteur) }}
        </div>
        <div class="bab-Grid-cell bab-Grid-cell--1-3">
            {{ form_label(form.email, 'Adresse email') }}
            {{ form_widget(form.email) }}
        </div>
        <div class="bab-Grid-cell bab-Grid-cell--1-3">
            {{ form_label(form.site, 'Site web') }}
            {{ form_widget(form.site) }}
        </div>
    </fieldset>
    <fieldset class="bab-Grid bab-Grid--smallGutters">
        <div class="bab-Grid-cell bab-Grid-cell--1-1">
            {{ form_label(form.contenu, 'Commentaire') }}
            {{ form_widget(form.contenu) }}
        </div>
    </fieldset>
    <fieldset class="bab-Grid bab-Grid--smallGutters">
        <div class="bab-Grid-cell bab-Grid-cell--1-1">
            {{ form_widget(form.recaptcha) }}
        </div>
    </fieldset>
    <div style="display: none;">
        {{ form_widget(form.parent) }}
    </div>
    <div class="bab-Grid bab-Grid--smallGutters">
        <div class="bab-Grid-cell bab-Grid-cell--1-1">
            <button class="bab-Button" type="submit">
                Envoyer le commentaire
            </button>
        </div>
    </div>
{{ form_end(form) }}
