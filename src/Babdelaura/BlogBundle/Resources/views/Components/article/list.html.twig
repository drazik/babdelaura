{% set previewTitleElement = previewTitleElement|default('h2') %}

<section class="bab-Grid bab-Grid--inlineBlock">
{% for article in articles %}
{% if featured|default(false) and loop.index == 1 %}
    <div class="bab-Grid-cell bab-Grid-cell--1-1">
        {% include 'BabdelauraBlogBundle:Components/article:preview-featured.html.twig' with {'article': article, 'titleElement': previewTitleElement} only %}
    </div>
{% else %}
    <div class="bab-Grid-cell bab-Grid-cell--1-3">
        {% include 'BabdelauraBlogBundle:Components/article:preview.html.twig' with {'article': article, 'titleElement': previewTitleElement} only %}
    </div>
{% endif %}
{% endfor %}
</section>
