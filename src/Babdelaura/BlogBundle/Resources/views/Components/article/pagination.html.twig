{% set pageParameterName = pageParameterName|default('page') %}
{% set query = query|default({}) %}
{% set previousPage = page - 1 %}
{% set nextPage = page + 1 %}

<div class="align-center">
{% if not isFirstPage %}
    <a class="bab-Button bab-Button--block@small" href="{{ path(route, query|merge({(pageParameterName): previousPage})) }}">
        {% include 'BabdelauraBlogBundle:Components:icon.html.twig' with {'name': 'chevronLeft'} only %}
        Articles plus r√©cents
    </a>
{% endif %}

{% if not isLastPage %}
    <a class="bab-Button bab-Button--block@small" href="{{ path(route, query|merge({(pageParameterName): nextPage})) }}">
        Articles plus anciens
        {% include 'BabdelauraBlogBundle:Components:icon.html.twig' with {'name': 'chevronRight'} only %}
    </a>
{% endif %}
</div>
