{% macro topbar(groups) %}
{% import _self as topbar %}
<nav class="Topbar">
  {% for group in groups %}
    {{topbar.group(group.pullRight, group.items)}}
  {% endfor %}
</nav>
{% endmacro %}

{% macro group(pullRight, items) %}
{% import _self as topbar %}
  <div class="Topbar_group {% if pullRight %}Topbar_group-pullRight{% endif %}">
    {% for item in items %}
      {{topbar.item(item.href, item.icon, item.text)}}
    {% endfor %}
  </div>
{% endmacro %}

{% macro item(href, icon, text) %}
  <a href="{{href}}" class="Topbar_link">
    {% include 'BabdelauraAdminBundle:Components:icon.html.twig' with {'name': icon, 'size': 12} only %}
    {{text}}
  </a>
{% endmacro %}
