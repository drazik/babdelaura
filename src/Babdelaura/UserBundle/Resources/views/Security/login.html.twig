<!doctype html>
<html lang="fr">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Connexion Ã  l'espace d'administration</title>
    <link rel="stylesheet" media="screen" href="{{asset('css/main.css') }}" />
</head>

<body>
    <form class="form-login bab-Wrapper bab-Wrapper--small" method="post" action="{{ path('login_check') }}">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.message|trans({},'messages') }}
            </div>
        {% endif %}
        <div class="form-group">
            <label for="username">Nom d'utilisateur</label>
            <input type="text" name="_username" id="username" value="{{ last_username }}"/>
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" name="_password" id="password" />
        </div>
        <input type="checkbox" id="remember_me" name="_remember_me" checked />
        <label for="remember_me">Se souvenir de moi</label>
        <button class="bab-Button bab-Button-fullWidth" type="submit">Connexion</button>
    </form>
</body>

</html>
